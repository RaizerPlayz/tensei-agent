<?xml version="1.0" encoding="UTF-8"?>
<dfasdl xmlns="http://www.dfasdl.org/DFASDL"
        default-encoding="utf-8" semantic="niem">

  <!--
  ***************************************************************************
  Element
  ***************************************************************************
  -->
  <elem id="bar"/>
  <elem>
    <str>Element</str>
  </elem>

  <elem id="id">
    <str>Element with id</str>
  </elem>

  <elem stop-sign="#">
    <str>Element defines stop sign.</str>
  </elem>

  <elem>
    <elem class="bunt">
      <elem class="gelb">
        <num>12</num>
        <str>Boxed elements</str>
      </elem>
    </elem>
  </elem>

  <!--
  ***************************************************************************
  Sequence
  ***************************************************************************
  -->
  <seq min="2" keepID="false">
    <elem>
      <str>Udo</str>
    </elem>
    <elem>
      <str>Bernd</str>
    </elem>
  </seq>

  <!--
  ***************************************************************************
  Choice
  ***************************************************************************
  -->
  <choice>
    <str length="2"/>
    <num max-digits="3"/>
  </choice>

  <!--
  ***************************************************************************
  Fixed-Sequence
  ***************************************************************************
  -->
  <fixseq count="3">
    <elem>
      <str>eins</str>
      <str>zwei</str>
      <str>drei</str>
    </elem>
  </fixseq>

  <!--
  ***************************************************************************
  CID
  ***************************************************************************
  -->
  <cid class="foo"/>
  <cid class="duck">
    <str>haus</str>
  </cid>

  <!--
  ***************************************************************************
  Reference
  ***************************************************************************
  -->
  <ref sid="idBin" class="refClass" value="refValue"/>

  <!--
  ***************************************************************************
  Numeric
  ***************************************************************************
  -->
  <num length="3"/>
  <num>12</num>
  <num id="idnum">3</num>
  <num length="4">3333</num>
  <num max-digits="3" stop-sign="#">32</num>
  <num precision="2" length="5">24345</num>
  <num length="2">0</num>

  <!--
  ***************************************************************************
  Format-Numeric
  ***************************************************************************
  -->
  <formatnum format="[0-9]+"/>
  <formatnum format="[0-9]+">123</formatnum>
  <formatnum format="[123\.]">232.1</formatnum>
  <formatnum format="[0-9]{3,3}">421</formatnum>

  <!--
  ***************************************************************************
  String
  ***************************************************************************
  -->
  <str id="idString"/>
  <str>String</str>
  <str defaultstr="platzhalter">placeholder</str>
  <str format="[a-zA-Z]+">AbCdEf</str>
  <str length="3">abc</str>

  <!--
  ***************************************************************************
  Format-String
  ***************************************************************************
  -->
  <formatstr format="a*"/>
  <formatstr format="-[0-9]{2,2}[a-z]+">-23abc</formatstr>
  <formatstr format="[a-zA-Z*]">drei*vier*f√ºnf</formatstr>

  <!--
  ***************************************************************************
  Date
  ***************************************************************************
  -->
  <date id="idDate"/>
  <date id="idDateFilled">2013-12-28</date>

  <!--
  ***************************************************************************
  Datetime
  ***************************************************************************
  -->
  <datetime id="idDatetime"/>
  <datetime id="idDatetimeFilled">2002-05-30T09:00:00</datetime>

  <!--
  ***************************************************************************
  Time
  ***************************************************************************
  -->
  <time id="idTime"/>
  <time id="idTimeFilled">09:30:10.5</time>

  <!--
  ***************************************************************************
  Formatted Time
  ***************************************************************************
  -->
  <formattime id="idFormattime" format="YYYYMMDD HH:MM:SS"/>
  <formattime id="idFormattimeFilled" format="YYYYMMDD HH:MM:SS">
    20131228 12:23:54
  </formattime>

  <!--
  ***************************************************************************
  Binary
  ***************************************************************************
  -->
  <bin id="idBin" byteOrder="littleEndian"/>
  <bin id="idBniFilled" byteOrder="littleEndian" mime="text/plain">1010011011</bin>

  <!--
  ***************************************************************************
  Binary64
  ***************************************************************************
  -->
  <bin64 id="idBniFilled64">1010011011</bin64>

  <!--
  ***************************************************************************
  BinaryHex
  ***************************************************************************
  -->
  <binHex id="idBinFilled2">0fb8</binHex>

  <!--
  ***************************************************************************
  Constant
  ***************************************************************************
  -->
  <const id="age">
    <num>99</num>
  </const>
  <const id="PI">
    <num>314</num>
  </const>

  <!--
  ***************************************************************************
  Expression
  ***************************************************************************
  -->
  <sxp>
    <![CDATA[{List(apple, banana, orange).map(i => <li> {i} </li>)}]]>
  </sxp>

</dfasdl>